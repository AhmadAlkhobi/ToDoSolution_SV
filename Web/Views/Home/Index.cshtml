@model List<NTierTodoApp.Models.TaskItem>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>إدارة المهام – n-tier</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>قائمة المهام (n-tier)</h1>
        <ul class="list-group">
            @foreach (var task in Model)
            {
                <li class="list-group-item">
                    @if(task.IsComplete)
                    {
                        <s>@task.Title</s>
                    }
                    else
                    {
                        @task.Title
                        <form method="post" asp-action="CompleteTask" style="display:inline;">
                            <input type="hidden" name="id" value="@task.Id" />
                            <button type="submit" class="btn btn-success btn-sm">اكتملت</button>
                        </form>
                        <a href="@Url.Action("EditTask", new { id = task.Id })" class="btn btn-warning btn-sm">تعديل</a>
                        <form method="post" asp-action="DeleteTask" style="display:inline;">
                            <input type="hidden" name="id" value="@task.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">حذف</button>
                        </form>
                    }
                </li>
            }
        </ul>

        <form method="post" asp-action="AddTask" class="mt-3">
            <div class="input-group">
               2
                <input type="text" name="title" class="form-control" placeholder="أضف مهمة جديدة" />
                <button type="submit" class="btn btn-primary">إضافة</button>
            </div>
        </form>
    </div>
</body>
</html>